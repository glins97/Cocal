<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey1"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp" android:id="@+id/main_layout">

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fillViewport="false"
            android:background="@color/orange1"
            android:id="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV0"
                    android:layout_height="50dp"
                    android:text="V0" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV1"
                    android:layout_height="50dp"
                    android:text="V1" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV2"
                    android:layout_height="50dp"
                    android:text="V2" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV3"
                    android:layout_height="50dp"
                    android:text="V3" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV4"
                    android:layout_height="50dp"
                    android:text="V4" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV5"
                    android:layout_height="50dp"
                    android:text="V5" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV6"
                    android:layout_height="50dp"
                    android:text="V6" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV7"
                    android:layout_height="50dp"
                    android:text="V7" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV8"
                    android:layout_height="50dp"
                    android:text="V8" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV9"
                    android:layout_height="50dp"
                    android:text="V9" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV10"
                    android:layout_height="50dp"
                    android:text="V10" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV11"
                    android:layout_height="50dp"
                    android:text="V11" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV12"
                    android:layout_height="50dp"
                    android:text="V12" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV13"
                    android:layout_height="50dp"
                    android:text="V13" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV14"
                    android:layout_height="50dp"
                    android:text="V14" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
            <Button android:layout_width="50dp"
                    android:id="@+id/btnV15"
                    android:layout_height="50dp"
                    android:text="V15" style="@style/Widget.AppCompat.Button.Borderless"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </HorizontalScrollView>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/constraintLayout">

        <TextView
                android:text="Boulders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent" android:textSize="15sp"
                android:textAppearance="@style/TitleTheme"/>
        <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/imageButton" android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/title"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.861"
                app:layout_constraintTop_toTopOf="parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/search" android:adjustViewBounds="false" android:padding="10dp"
                android:layout_marginTop="2dp"/>
        <ImageButton
                android:layout_width="36dp"
                android:layout_height="32.5dp"
                android:id="@+id/imageButton2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/bars"
                app:layout_constraintEnd_toStartOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.175" android:scaleType="fitCenter" android:padding="10dp"
                android:layout_marginTop="4dp"/>
        <android.support.design.widget.TabLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:tabIndicatorColor="@color/orange1" android:id="@+id/tabLayout"
                app:tabTextAppearance="@style/Body1Theme">

            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODOS"/>

            <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROJETOS"/>

            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MANDADOS"/>
        </android.support.design.widget.TabLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/viewPager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">
        <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:name="com.example.projeto1.AllBouldersFragment"
                android:id="@+id/fragment"/>
        <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:name="com.example.projeto1.ProjectBouldersFragment"
                android:id="@+id/fragment2"/>
    </android.support.v4.view.ViewPager>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1px" tools:layout_editor_absoluteX="94dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:background="#9B9B9B">

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>